<%= form_with(model: article, local: true, html: { multipart: true }) do |form| %>
  <% if article.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title,required: true, minlength: 3, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :body %>
    <%= form.text_area :body, required: true, minlength: 30, class: "form-control", rows: 5 %>
  </div>

  <div class="mb-3">
    <%= form.label :image %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
