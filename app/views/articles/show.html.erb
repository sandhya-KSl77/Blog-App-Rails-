<% if @article.image.attached? %>
  <div class="mb-4 text-center">
    <%= image_tag @article.image, class: "img-fluid rounded shadow", style: "max-height: 400px;" %>
  </div>
<% end %>

<div class="card mb-4">
  <div class="card-body">
    <h2 class="card-title"><%= @article.title %></h2>
    <p class="card-text"><%= @article.body %></p>
  </div>
</div>

<div class="d-flex justify-content-between mb-4">
  <%= link_to 'Edit Article', edit_article_path(@article), class: 'btn btn-warning' %>

  <%= link_to 'Delete Article', article_path(@article),
      method: :delete,
      data: { confirm: 'Are you sure you want to delete this article?' },
      class: 'btn btn-danger' %>
</div>

<h4 class="mt-5">Comments</h4>
<%= render @article.comments %>

<h5 class="mt-4">Add a Comment</h5>
<%= form_with(model: [@article, @article.comments.build], local: true) do |form| %>
  <div class="mb-2">
    <%= form.label :commenter %>
    <%= form.text_field :commenter, class: "form-control" %>
  </div>
  <div class="mb-2">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>
  <%= form.submit "Post Comment", class: "btn btn-success" %>
<% end %>
